.edit_list(attr-entity_type=entity_type)
  = action_parameters do
    - input :list_id, :string, "New list ID", list_id
    - list.info.each do |key, value|
      - next if key.to_sym == :annotation_types or key.to_sym == :annotated_array
      - input key, :string, "Entity annotation #{ key }", value
    - input :entities, :array, "Entities", list * "\n", :label => "entities"
 


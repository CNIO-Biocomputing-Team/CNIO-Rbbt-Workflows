- action_card = ActionCard.new do
  - input :database, :select, "Database code", nil, :select_options => [:kegg, :nature, :reactome, :biocarta, :go_bp, :go_mf, :go_cc, :pfam, :interpro]
  - input :cutoff, :float, "Pvalue cutoff", 0.1
   
- action_card.require :database, :cutoff
= action_card_render action_card do
  = table :table_id => "Mutation enrichment (#{ database }) for #{ list_id }" do
    - tsv = MutationEnrichment.job(:mutation_pathway_enrichment, list_id, :organism => list.organism, :mutations => list, :watson => list.watson, :baseline => :pathway_base_counts, :database => database).run
    - tsv.select("p-value"){|p| p.to_s.to_f < cutoff.to_f}
 
